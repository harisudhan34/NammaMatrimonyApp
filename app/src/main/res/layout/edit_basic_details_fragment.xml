<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.skyappz.namma.editprofile.EditBasicDetails" />

        <variable
            name="user"
            type="com.skyappz.namma.model.User" />

        <variable
            name="homeActivity"
            type="com.skyappz.namma.activities.HomeActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".editprofile.EditBasicDetails">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic Profile Details"
                        android:textColor="@color/pink"
                        android:paddingBottom="5dp"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bottom_line"
                        android:fontFamily="@font/opensansregular" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skip"
                        android:textColor="@color/white"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:layout_margin="10dp"
                        android:textSize="14dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/pink_rounded"
                        android:fontFamily="@font/opensansregular" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tetName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_spinner_red"
                        android:drawableStart="@drawable/lock"
                        android:drawablePadding="@dimen/small_padding"
                        android:fontFamily="@font/opensansregular"
                        android:gravity="center_vertical"
                        android:hint="@string/name_hint"
                        android:padding="@dimen/medium_padding"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/input_text_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_field_height"
                        android:layout_marginTop="@dimen/input_field_margin">


                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tetDOB"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_field_height"
                            android:layout_toLeftOf="@id/ivPickDate"
                            android:background="@drawable/rounded_spinner_red"
                            android:drawableStart="@drawable/lock"
                            android:drawablePadding="@dimen/small_padding"
                            android:fontFamily="@font/opensansregular"
                            android:gravity="center_vertical"
                            android:hint="@string/dob_hint"
                            android:padding="@dimen/medium_padding"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/input_text_size" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/ivPickDate"
                            android:layout_width="@dimen/input_field_height"
                            android:layout_height="@dimen/input_field_height"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:padding="@dimen/small_padding"
                            android:src="@drawable/calendar" />

                    </RelativeLayout>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:text="@string/gender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/btn_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:orientation="horizontal">
                        <RadioGroup
                            android:id="@+id/radiogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <RadioButton
                                android:id="@+id/rbMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/male"
                                android:textColor="@color/black"
                                android:checked="true" />
                            <RadioButton
                                android:id="@+id/rbFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/female"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/medium_padding" />

                        </RadioGroup>

                    </LinearLayout>
                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/mothertongue_auto"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_field_height"
                        android:layout_marginTop="@dimen/input_field_margin"
                        android:clickable="true"
                        android:background="@drawable/rounded_corner_gray"
                        android:gravity="center_vertical"
                        android:hint="select mother tongue"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/input_text_size"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/opensansregular" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pink"
                        android:layout_marginTop="@dimen/input_field_margin"
                        android:text="Profile Created For"/>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/profile_created_sp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_field_height"
                        android:background="@drawable/rounded_corner_gray"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:spinnerMode="dialog"
                        android:gravity="center_vertical"
                        android:hint="Profile created for"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/input_text_size"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/opensansregular"
                        />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/pink_rounded"
                        android:paddingLeft="@dimen/input_field_height"
                        android:paddingRight="@dimen/input_field_height"
                        android:text="@string/update"
                        android:textColor="@android:color/white" />
                </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>
</layout>