<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:text="@string/about_myself"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/close"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:padding="10dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:letterSpacing="0.1"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="This section  is auto generate baed on the details shared by you. if you required ,make changes "/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/alert_etmyself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_spinner_red"
            android:fontFamily="@font/opensansregular"
            android:gravity="top|start"
            android:layout_margin="10dp"
            android:minHeight="80dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/hintgray" />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pale_gray"
            android:text="I am also:"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:textFontWeight="900"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caring"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casual"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friendly"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gentle"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stright-forword"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family oriented"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confident"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respecting elders"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Responsilble"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>


            </LinearLayout>

        </LinearLayout>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pale_gray"
            android:text="My hobbies &amp; intrests are:"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:textFontWeight="900"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charity"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooking"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nature"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photography"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dancing"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Painting"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pazzles"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handgraft"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Art"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movies"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internet suffering"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traveling"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gardening"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@drawable/pink_border_rounded"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"/>


            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/save_and_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/save_and_contniue"
            android:textAllCaps="false"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

</LinearLayout>