<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".editprofile.UploadPhoto">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Photo Gallery"
        android:textColor="@color/pink"
        android:paddingBottom="5dp"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_line"
        android:fontFamily="@font/opensansregular" />


    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_top_margin"
        android:layout_gravity="center_horizontal"
        android:padding="10dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/add_image"
            android:layout_gravity="center_horizontal"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensansregular"
        android:textStyle="bold"
        android:text="Don't let your special someone miss you"
        android:textColor="@color/pink"
        android:textSize="@dimen/prodfiletext"
        android:gravity="center"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_rounded"
        android:text="Upload Photos "
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:fontFamily="@font/opensansregular"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/opensansregular"
        android:textColor="@color/black_gradient"
        android:text="upload photos from your local storage"
        android:gravity="center_horizontal"/>


</LinearLayout>