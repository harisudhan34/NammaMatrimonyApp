<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="#fff"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_marginLeft="10dp"
        android:id="@+id/bottom_home"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bottom_menu_home"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_home_black"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bottom_menu_home11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_gravity="center_horizontal"

            android:textColor="@color/black"
            android:textSize="12dp" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_marginLeft="12dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_searh"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/top_menu_electronicss"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_search_black"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/top_menu_electronics11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="12dp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_marginLeft="12dp"
        android:id="@+id/bottom_mathes"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/top_menu_appliancess"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_mathes"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/top_menu_appliances11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matches"
            android:layout_gravity="center_horizontal"

            android:textColor="#000"
            android:textSize="12dp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/bottom_imbox"
        android:layout_width="80dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/top_menu_moree"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_inbox"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/top_menu_more11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:layout_gravity="center_horizontal"

            android:textColor="#000"
            android:textSize="12dp"
            />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>
