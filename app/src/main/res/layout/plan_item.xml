<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:padding="@dimen/small_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/medium_padding">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvPlanName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NM - REGULAR"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="180 days"
                android:textColor="@color/input_text_color"
                android:textSize="@dimen/input_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:text="INR 2999"
                android:textColor="@color/pink"
                android:textSize="@dimen/normal_text_size1" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/right_arrow_size"
                android:layout_height="@dimen/right_arrow_size"
                android:layout_marginLeft="@dimen/input_field_height"
                android:src="@drawable/right_arrow" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>